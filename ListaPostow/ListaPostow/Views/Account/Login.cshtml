@model LoginViewModel

@{
    ViewData["Title"] = "Logowanie";
}

@{await Html.PartialAsync("_ValidationScriptsPartial");}

<div class="container pt-5">
        <div class="container col-md-4 w-50">
            <form asp-action="Login">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <h2>Logowanie</h2>
                <div class="form-group">
                    <label asp-for="Login" class="control-label"></label>
                    <input asp-for="Login" class="form-control" asp-for-placeholder="Login" />
                    <span asp-validation-for="Login" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="control-label"></label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Zaloguj" class="btn btn-primary mb-2" />
                </div>
            </form>
        </div>
    </div>
