@model LoginViewModel

@{
    ViewData["Title"] = "Logowanie";
}

@{await Html.PartialAsync("_ValidationScriptsPartial");}
<div>@Html.ValidationSummary()</div>
<div class="container">
        <div class="container col-md-4">
            <form asp-action="Login" class="text-center">
                <div>@Html.ValidationSummary()</div>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <h2>Logowanie</h2>
                <div class="form-group">
                    <label asp-for="Login" class="control-label"></label>
                    <input asp-for="Login" class="form-control" asp-for-placeholder="Login"/>                    
                    <span asp-validation-for="Login" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="control-label"></label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Zaloguj" class="btn btn-primary mb-2" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index" asp-controller="Home">Powrót do strony głównej</a>
    </div>