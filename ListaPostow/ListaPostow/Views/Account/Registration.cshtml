@model RegistrationViewModel

@{
    ViewData["Title"] = "Rejestracja";
}


@{await Html.PartialAsync("_ValidationScriptsPartial");}
<div class="container pt-5">
    <div class="container col-md-4">
        <form asp-action="Registration">
            <h2>Rejestracja</h2>
            <div>@Html.ValidationSummary()</div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">E-mail</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Hasło</label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Powtórz hasło</label>
                <input asp-for="ReapeatPassword" class="form-control" />
                <span asp-validation-for="ReapeatPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Zarejestruj" class="btn btn-primary mb-2" />
            </div>
        </form>
    </div>
</div>

